{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Pseudocode",
    "scopeName": "source.pseudocode",
    "patterns": [
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#keywords" },
        { "include": "#functions" },
        { "include": "#builtins" },
        { "include": "#operators" },
        { "include": "#variables" }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.pseudocode",
                    "match": "//.*$"
                },
                {
                    "name": "comment.block.pseudocode",
                    "begin": "/\\*",
                    "end": "\\*/"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.pseudocode",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.pseudocode",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.pseudocode",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.pseudocode",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.pseudocode",
                    "match": "\\b0[xX][0-9a-fA-F]+\\b"
                },
                {
                    "name": "constant.numeric.binary.pseudocode",
                    "match": "\\b0[bB][01]+\\b"
                },
                {
                    "name": "constant.numeric.float.pseudocode",
                    "match": "\\b[0-9]+\\.[0-9]+([eE][+-]?[0-9]+)?\\b"
                },
                {
                    "name": "constant.numeric.integer.pseudocode",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.pseudocode",
                    "match": "\\b(if|elif|else|while|for|in|return|break|continue|match|case|_)\\b"
                },
                {
                    "name": "keyword.declaration.pseudocode",
                    "match": "\\b(fn|let|const|var)\\b"
                },
                {
                    "name": "constant.language.pseudocode",
                    "match": "\\b(true|false|nil|null)\\b"
                },
                {
                    "name": "keyword.operator.logical.pseudocode",
                    "match": "\\b(and|or|not)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.pseudocode",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
                },
                {
                    "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
                    "captures": {
                        "1": { "name": "keyword.declaration.pseudocode" },
                        "2": { "name": "entity.name.function.definition.pseudocode" }
                    }
                }
            ]
        },
        "builtins": {
            "patterns": [
                {
                    "name": "support.function.builtin.pseudocode",
                    "match": "\\b(print|println|input|len|str|int|float|type|push|pop|slice|concat|split|join|replace|upper|lower|trim|substr|index_of|contains|starts_with|ends_with|char_at|ord|chr|keys|values|has|sort|reverse|range|abs|min|max|floor|ceil|round|sqrt|pow|random|clock|bit_and|bit_or|bit_xor|bit_not|bit_lshift|bit_rshift|popcount|clz|ctz|read_file|write_file|append_file|file_exists|delete_file|list_dir|mkdir|http_get|http_post|json_parse|json_stringify|exec|env|set_env|args|exit|sleep|dict|dict_get|dict_set|dict_has|dict_keys|dict_values|dict_delete|sin|cos|tan|asin|acos|atan|atan2|log|log10|log2|exp|hypot|vec_add|vec_sub|vec_mul|vec_div|vec_dot|vec_sum|vec_prod|vec_min|vec_max|vec_mean|vec_sort|vec_reverse|vec_unique|vec_zip|vec_range|bytes|encode_utf8|decode_utf8|encode_base64|decode_base64|hash)\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.comparison.pseudocode",
                    "match": "(==|!=|<=|>=|<|>)"
                },
                {
                    "name": "keyword.operator.assignment.pseudocode",
                    "match": "(=|\\+=|-=|\\*=|/=)"
                },
                {
                    "name": "keyword.operator.arithmetic.pseudocode",
                    "match": "(\\+|-|\\*|/|%|\\^)"
                },
                {
                    "name": "keyword.operator.range.pseudocode",
                    "match": "\\.\\."
                }
            ]
        },
        "variables": {
            "patterns": [
                {
                    "name": "variable.other.pseudocode",
                    "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
                }
            ]
        }
    }
}
