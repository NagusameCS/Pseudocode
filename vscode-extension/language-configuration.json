{
    "comments": {
        "lineComment": "//",
        "blockComment": [
            "/*",
            "*/"
        ]
    },
    "brackets": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        }
    ],
    "surroundingPairs": [
        [
            "{",
            "}"
        ],
        [
            "[",
            "]"
        ],
        [
            "(",
            ")"
        ],
        [
            "\"",
            "\""
        ],
        [
            "'",
            "'"
        ]
    ],
    "folding": {
        "offSide": false,
        "markers": {
            "start": "^\\s*//\\s*#?region\\b",
            "end": "^\\s*//\\s*#?endregion\\b"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(fn\\s+\\w+\\s*\\([^)]*\\)|if\\s+.+\\s+then|elif\\s+.+\\s+then|else|while\\s+.+\\s+do|for\\s+.+\\s+do|match\\s+.+|case\\s+.+\\s+then)\\s*$",
        "decreaseIndentPattern": "^\\s*(end|else|elif)\\b"
    },
    "onEnterRules": [
        {
            "beforeText": "^\\s*(fn\\s+\\w+\\s*\\([^)]*\\)|if\\s+.+\\s+then|elif\\s+.+\\s+then|else|while\\s+.+\\s+do|for\\s+.+\\s+do|match\\s+.+|case\\s+.+\\s+then)\\s*$",
            "action": {
                "indent": "indent"
            }
        },
        {
            "beforeText": "^\\s*end\\s*$",
            "action": {
                "indent": "outdent"
            }
        }
    ],
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}